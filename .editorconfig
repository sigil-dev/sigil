root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.go]
indent_style = tab

[*.{yaml,yml,toml,json}]
indent_style = space
indent_size = 2

[*.{ts,svelte,js,css,html}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.proto]
indent_style = space
indent_size = 2

[Taskfile.yaml]
indent_style = space
indent_size = 2
